{
    "version": 6,
    "configurePresets": [
        {
            "name": "vcpkg",
            "generator": "Ninja",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "test",
            "configurePreset": "vcpkg"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "vcpkg",
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}
